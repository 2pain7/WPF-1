                <Image Source="C:\Users\student\Pictures\64498.png" Width="72"></Image>
            </Button>
            <Separator/>
            <Button>
                <Image Source="C:\Users\student\Pictures\6152113.png" Height="70" Width="69"></Image>
            </Button>
